@model RPGCharacterCreator.Models.Skill

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if (ViewBag.Error == true)
{
    <div class="alert alert-danger" role="alert">
        There was an error trying to delete.<br /> Try gain
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Skill</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SkillName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SkillName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassRequired)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassRequired)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SkillType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SkillType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SkillLevel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SkillLevel)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger confirmation" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">
        $('.confirmation').on('click', function () {
            return confirm('Do you really want to delete?')
        });
    </script>
}